                            <button type="submit"><i class="ti-shopping-cart"></i></button>
                          </form>
                        </li>

                      </ul>
                    </div>
                    <div>
                      <div class="card-body">
                        <p>
                          <%= item.category.name %>
                        </p>
                        <p>Available: <%=item.available_items%>
                        </p>
                        <h4 class="card-product__title">
                          <a href="/view-equipment/<%= item._id %>">
