  <div class="container">
    <%- include('messages') %>

      <% if (typeof message !=='undefined' ) { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <%= message %>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <% } %>

          <div class="table-responsive mt-3">

            <table id="example" class="table table-striped table-bordered" style="width: 100%;">
              <thead class="student-thread">
                <tr>

                  <th>User Name</th>
                  <th>Department</th>
                  <th>Year</th>
                  <th>Item</th>
                  <th>Quantity</th>
                  <th>request Date</th>
                  <th>Return Date</th>
                  <th>Status</th>
                  <th>action</th>

                </tr>
              </thead>
              <tbody>


                <% loanRequests.forEach((loanRequest)=> { %>
                  <% if (loanRequest.user_id && loanRequest.user_id.department===currentUserData.department) { %>
                    <tr>
                      <td>
                        <%= loanRequest.user_id.name %>
                      </td>
                      <td>
                        <%= loanRequest.user_id.department %>
                      </td>
                      <td>
                        <%= loanRequest.user_id.year %>
                      </td>
                      <td>
                        <%= loanRequest.item.name %>
                      </td>
                      <td>
                        <%= loanRequest.quantity %>
                      </td>
                      <td>
                        <%= loanRequest.request_date.toLocaleDateString()%>
                      </td>
                      <td>
                        <%= loanRequest.return_date.toLocaleDateString() %>
                      </td>
                      <td>
                        <%= loanRequest.status %>
                      </td>
                      <td>
                        <div class="row">

                          <div class="col-lg-6">
                            <form action="/manage_loan/<%= loanRequest.id %>" method="POST">
                              <input type="hidden" name="loan_id" value="<%= loanRequest.id %>">
                              <button type="submit" class="border-0 bg-transparent" name="status"
                                        data-toggle="tooltip" data-placement="top" title="Approve" value="approved"><i
                                          class="ti-check" style="color:green"></i></button>
                              <!-- <button type="submit" class="button btn-primary" name="status" value="approved">Approve</button> -->
                            </form>
                          </div>
                          <div class="col-lg-6">
                            <form action="/reject_loan/<%= loanRequest.id %>" method="POST">
                              <input type="hidden" name="loan_id" value="<%= loanRequest.id %>">
                              <button type="submit" class="border-0 bg-transparent" name="status" data-toggle="tooltip"
                                data-placement="top" title="Reject" value="rejected"><i class="ti-close"
                                  style="color:red"></i></button>
                              <!-- <button type="submit" name="status" class="button btn-danger " value="rejected">Reject</button> -->
                            </form>
                          </div>
                        </div>
          </div>
          </td>

          </tr>
          <% } %>
            <% }); %>

              </tbody>
              </table>

  </div>


