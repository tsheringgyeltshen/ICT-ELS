  <div class="container">
    <%- include('messages') %>

      <% if (typeof message !=='undefined' ) { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <%= message %>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <% } %>

          <div class="table-responsive mt-3">
            <p>Approval Pending Loan</p>
            <table id="datatablesSimple" class="table table-striped table-bordered" style="width: 100%;">
              <thead class="student-thread">
                <tr>
                  <th>Username</th>
                  <th>User ID</th>
                  <th>Department</th>
                  <th>User Type</th>
                  <th>Request Date</th>
                  <th>Return Date</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <% if (loanRequests.length===0) { %>
                  <tr>
                    <td colspan="7" style="text-align: center;">No loan request</td>
                  </tr>
                  <% } else { %>
                    <% loanRequests.forEach((loanRequest)=> { %>
                      <tr>
                        <td>
                          <div class="media align-items-center">
                            <a href="/loan-detailsapproval/<%= loanRequest._id %>" class="avatar avatar-sm mr-2">
                              <img class="rounded-circle img-thumbnail img-fluid" src="<%= loanRequest.user_id.image %>"
                                alt="User Image" style="max-width: 50px;">
                            </a>
                            <div class="media-body">
                              <a href="/loan-detailsapproval/<%= loanRequest._id %>">
                                <%= loanRequest.user_id.name %>
                              </a>
                            </div>
                          </div>
                        </td>
                        <td>
                          <%= loanRequest.user_id.userid %>
                        </td>
                        <td>
                          <%= loanRequest.user_id.department %>
                        </td>
                        <td>
                          <%= loanRequest.user_id.usertype %>
                        </td>
                        <td>
                          <%= loanRequest.request_date.toLocaleDateString() %>
                        </td>
                        <td>
                          <%= loanRequest.return_date.toLocaleDateString() %>
                        </td>
                        <td>
                          <div class="d-flex">
                            <form action="/manageapproval_loan/<%= loanRequest._id %>" method="POST">
                              <input type="hidden" name="loan_id" value="<%= loanRequest._id %>">
                              <button type="submit" class="border-0 bg-transparent" name="status" data-toggle="tooltip"
                                data-placement="top" title="Approve" value="Approved">
                                <i class="ti-check" style="color:green"></i>
                              </button>
                            </form>
                            <form action="/rejectapproval_loan/<%= loanRequest._id %>" method="POST">
                              <input type="hidden" name="loan_id" value="<%= loanRequest._id %>">
                              <button type="submit" class="border-0 bg-transparent" name="status" data-toggle="tooltip"
                                data-placement="top" title="Reject" value="rejected">
                                <i class="ti-close" style="color:red"></i>
                              </button>
                            </form>
                          </div>
                        </td>
                      </tr>
                      <% }); %>
                        <% } %>
              </tbody>
            </table>



          </div>


