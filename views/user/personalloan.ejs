  </header>
  <!-- <div class="product_image_area"> -->
  <div class="container-fluid">
    <div class="table-responsive mt-3">

      <table id="example" class="table table-striped table-bordered" style="width: 100%;">
        <thead class="student-thread">
          <tr>

            <th>Item Name</th>
            <th>Quantity</th>
            <th>Request Date</th>
            <th>Return Date</th>
            <th>Status</th>
            <th>Collection Date</th>

          </tr>
        </thead>
        <tbody>

          <% loans.forEach(loan=> { %>
            <tr>
              <td>
                <%= loan.itemName %>
              </td>
              <td>
                <%= loan.quantity %>
              </td>
              <td>
                <%= loan.requestDate.toDateString() %>
              </td> <!-- New column -->
              <td>
                <%= loan.returnDate.toDateString() %>
              </td>
              <td>
                <span
                  class="badge <%= loan.status === 'pending' ? 'badge badge-warning' : loan.status === 'approved' ? 'badge-success' : 'badge-danger' %>">
                  <%= loan.status %>
                </span>
              </td>
              <td>
                <% if (loan.collectionDate instanceof Date) { %>
                  <%= loan.collectionDate.toDateString() %>
                    <% } else { %>
                      <%= loan.collectionDate %>
                        <% } %>
              </td>
            </tr>
            <% }); %>

        </tbody>
      </table>

    </div>


  </div>


