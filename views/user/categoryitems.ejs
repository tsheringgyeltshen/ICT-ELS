                    <button class="navbar-toggler" type="button" data-toggle="collapse"
                        data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <div class="collapse navbar-collapse offset" id="navbarSupportedContent">
                        <ul class="nav navbar-nav menu_nav ml-auto mr-auto">
                            <li class="nav-item"><a class="nav-link" href="/userhome">Home</a></li>
                            <li class="nav-item active"><a class="nav-link" href="/all-items">Equipment</a></li>
                            <li class="nav-item"><a class="nav-link" href="/get_loan">Loan</a></li>
                            <li class="nav-item"><a class="nav-link" href="/aboutus">About</a></li>


                        </ul>

                        <ul class="nav-shop">
                            <li class="nav-item cartnav"><a href="/cart"><i class="ti-shopping-cart" style="font-size: large;"></i>
                                <span
                                  class="position-relative start-100 translate-middle badge rounded-pill bg-danger <%= cartItemCount > 0 ? ' active' : '' %>"
                                  style="color: #fff; top: -10px; font-size: smaller; right: 7px;">
                                  <%= cartItemCount %>
                                </span></a> </li>
                            <li class="nav-item submenu dropdown">

                                <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" role="button"
                                    aria-haspopup="true" aria-expanded="false"> <img src="<%=user.image%>"
                                        class="rounded-circle" height="30" width="30" alt="User Profile"
                                        loading="lazy" /></a>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="/user-profile">My Profile</a>
                                    <a class="dropdown-item" href="/logout">Logout</a>

                                </div>

                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
    </header>

    <div class="container">
        <div class="row">
            <div class="col-xl-3 col-lg-4 col-md-5">
                <div class="sidebar-categories">
                    <div class="head"> Category</div>
                    <ul class="main-categories">
                        <li class="common-filter">
                            <form action="#">
                                <% if (categories.length> 0) { %>

                                    <ul>
                                        <% categories.forEach(category=> { %>

                                            <li class="filter-list"><a href="/categoriesitems/<%= category._id %>"
                                                    class="category" style="color: black;">
                                                    <%= category.name %>
                                                </a>
                                                <label for="men">

                                                </label>
                                            </li>

                                            <% }) %>
                                    </ul>
                                    <% } %>

                            </form>
                        </li>
                    </ul>
                </div>
                <div class="sidebar-filter">

                </div>
            </div>
            <div class="col-xl-9 col-lg-8 col-md-7">
                <!-- Start Filter Bar -->
                <div class="filter-bar d-flex flex-wrap align-items-center">
                    <form class="input-group" action="/categoriesitems/<%= category._id %>" method="GET">
                        <div>
                            <div class="input-group filter-bar-search">
                                <input type="search" name="search" placeholder="Category/Name" class="form-control"
                                    value="<%= searchQuery %>">
                                <button type="submit"><i class="ti-search"></i></button>
                            </div>
                        </div>
                    </form>
                </div>

                <section class="lattest-product-area pb-40 category-list">
                    <h4 class="ml-4" style="color: #384aeb;"><%= category.name.charAt(0).toUpperCase() + category.name.slice(1) %></h4>

                    <div class="row mt-4" id="card-container">
                        <% if (items.length> 0) { %>
                            <% items.forEach(item=> { %>
                                <div class="col-md-6 col-lg-4">
                                    <div class="card text-center card-product">
                                        <div class="card-product__img">
                                            <img class="card-img item img-thumbnail" src="<%= item.image %>" alt="">
                                            <ul class="card-product__imgOverlay">
                                                <li>
                                                    <form action="/addto_card/<%= item._id %>" method="POST">
                                                        <input type="hidden" name="<%= item._id %>"
                                                            value="<%= item._id %>">
                                                        <button type="submit"><i class="ti-shopping-cart"></i></button>
                                                    </form>
                                                </li>

                                            </ul>

                                        </div>

                                        <div class="card-body">
                                            <h4 class="card-product__title">
                                                <a href="/view-item/<%= item._id %>">
                                                    <%= item.name %>
                                                </a>
                                            </h4>
                                            <p>
                                                <%= item.category.name %>
                                            </p>
                                            <span
                                                class="<% if (item.available_items === 1) { %>text-success<% } else if (item.available_items === 0) { %>text-warning<% } %>">
                                                <% if (item.available_items===1) { %>
                                                    Available
                                                    <% } else if (item.available_items===0) { %>
                                                        On Loan
                                                        <% } %>
                                            </span><br>
                                            <span>Tag: <%=item.itemtag%>
                                            </span>
                                            <!-- <p class="card-product__price">$150.00</p> -->
                                        </div>

                                    </div>
                                </div>
                                <% }) %>
                                    <% } else { %>
                                        <p>No items found.</p>
                                        <% } %>

                    </div>
                </section>
            </div>
        </div>
        <div id="pagination" class="text-center">
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    <li class="page-item" id="prev-page">
                        <a class="page-link" href="#" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                            <span class="sr-only">Previous</span>
                        </a>
                    </li>
                    <% var numPages=Math.ceil(items.length / cardsPerPage); %>
                        <% for (var page=1; page <=numPages; page++) { %>
                            <li class="page-item <%= page === currentPage ? 'active' : '' %>" id="page-<%= page %>">
                                <a class="page-link" href="#">
                                    <%= page %>
                                </a>
                            </li>
                            <% } %>
                                <li class="page-item" id="next-page">
                                    <a class="page-link" href="#" aria-label="Next">
                                        <span aria-hidden="true">&raquo;</span>
                                        <span class="sr-only">Next</span>
                                    </a>
                                </li>
                </ul>
            </nav>
        </div>

    </div>

    <footer>


        <div class="footer-bottom mt-2">
            <div class="container">
                <div class="row d-flex">
                    <p class="col-lg-12 footer-text text-center">
                        Copyright &copy;
                        <script>document.write(new Date().getFullYear());</script> All rights reserved | ICT-ELS
                    </p>
                </div>
            </div>
        </div>

    </footer>
    <!--================ End footer Area  =================-->

    <script>
        // JavaScript code to handle pagination functionality
        var currentPage = 1;
        var cardsPerPage = 9; // Number of cards to show per page
        var cards = document.querySelectorAll('#card-container .card');
        var numPages = Math.ceil(cards.length / cardsPerPage);

        // Function to show the cards for the current page
        function showCards(page) {
            var startIndex = (page - 1) * cardsPerPage;
            var endIndex = startIndex + cardsPerPage;

            for (var i = 0; i < cards.length; i++) {
                if (i >= startIndex && i < endIndex) {
                    cards[i].style.display = 'block';
                } else {
                    cards[i].style.display = 'none';
                }
            }
        }

        // Function to update the pagination UI
        function updatePaginationUI(page) {
            var paginationItems = document.querySelectorAll('#pagination li');

            paginationItems.forEach(function (item) {
                item.classList.remove('active');
            });

            var currentPageItem = document.getElementById('page-' + page);
            currentPageItem.classList.add('active');
        }

        // Function to handle page navigation
        function goToPage(page) {
            if (page < 1 || page > numPages) {
                return;
            }

            currentPage = page;
            showCards(currentPage);
            updatePaginationUI(currentPage);
        }

        // Event listeners for previous and next page buttons
        document.getElementById('prev-page').addEventListener('click', function (e) {
            e.preventDefault();
            goToPage(currentPage - 1);
        });

        document.getElementById('next-page').addEventListener('click', function (e) {
            e.preventDefault();
            goToPage(currentPage + 1);
        });

        // Event listeners for individual page buttons
        var pageButtons = document.querySelectorAll('#pagination li[id^="page-"]');

        pageButtons.forEach(function (button) {
            button.addEventListener('click', function (e) {
                e.preventDefault();
                var page = parseInt(this.id.split('-')[1]);
                goToPage(page);
            });
        });

        // Initial setup
        showCards(currentPage);
        updatePaginationUI(currentPage);
    </script>

    <script src="../assets/jquery/jquery-3.2.1.min.js"></script>
    <script src="../assets/bootstrap/bootstrap.bundle.min.js"></script>
    <script src="../assets/skrollr.min.js"></script>
    <script src="../assets/owl-carousel/owl.carousel.min.js"></script>
    <script src="../assets/nice-select/jquery.nice-select.min.js"></script>
    <script src="../assets/nouislider/nouislider.min.js"></script>
    <script src="../assets/jquery.ajaxchimp.min.js"></script>
    <script src="../assets/mail-script.js"></script>
    <script src="../assets/js/main.js"></script>
</body>

</html>