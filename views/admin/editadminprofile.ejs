        <div id="layoutSidenav_content">
            <section style="background-color: #eee;">
                <div class="container py-5">


                    <div class="row">
                        <div class="col-lg-4">
                            <div class="card mb-4">
                                <div class="card-body text-center">
                                    <img src="/<%= admin.image %>" alt="avatar" class="rounded-circle img-fluid"
                                        style="width: 150px; height: 150px;">
                                    <h5 class="my-3">
                                        <%= admin.name %>
                                    </h5>
                                    <p class="text-muted mb-1">
                                        <%= admin.userid %>
                                    </p>
                                    <p class="text-muted mb-4">
                                        <%= admin.department %>
                                    </p>
                                    <div class="d-flex justify-content-center mb-2">
                                        <!-- <a href="useredit.html" class="btn btn-primary" role="button" >Edit</a> -->
                                        <button type="button" data-bs-toggle="modal" data-bs-target="#deleteUserModal"
                                            class="btn btn-outline-danger ms-1">Delete</button>
                                    </div>
                                </div>
                            </div>
                            <!-- Modal -->
                            <div class="modal fade" id="deleteUserModal" tabindex="-1" role="dialog"
                                aria-labelledby="deleteUserModalLabel" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="deleteUserModalLabel">Confirm Deletion</h5>
                                            <!-- <button type="button" class="close" data-dismiss="modal" aria-label="Close"> -->
                                            <!-- <span aria-hidden="true">&times;</span> -->
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            Are you sure you want to delete <%= admin.name %>?
                                        </div>
                                        <div class="modal-footer">
                                            <!-- <button type="button" class="btn btn-secondary"
                                                data-dismiss="modal">Cancel</button> -->
                                            <form action="/delete-admin" method="POST">
                                                <input type="hidden" name="id" value="<%= admin._id %>">
                                                <button type="submit" class="btn btn-danger">Delete</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>


                        </div>
                        <div class="col-lg-8">
                            <div class="card mb-4">
                                <form action="" method="post">


                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-sm-3">
                                                <p class="mb-0">Full Name</p>
                                            </div>
                                            <div class="col-sm-9">
                                                <input class=" form-control" name="name" value="<%= admin.name %>"
                                                    required>
                                            </div>
                                        </div>
                                        <hr>
                                        <div class="row">
                                            <div class="col-sm-3">
                                                <p class="mb-0">Email</p>
                                            </div>
                                            <div class="col-sm-9">
                                                <input class=" form-control" name="email" value="<%= admin.email %>"
                                                    required>
                                            </div>
                                        </div>
                                        <hr>
                                        <div class="row">
                                            <div class="col-sm-3">
                                                <p class="mb-0">User ID</p>
                                            </div>
                                            <div class="col-sm-9">
                                                <input min="0" class=" form-control" name="userid"
                                                    value="<%= admin.userid %>" required>
                                            </div>
                                        </div>
                                        <hr>
                                        <div class="row">
                                            <div class="col-sm-3">
                                                <p class="mb-0">Phone</p>
                                            </div>
                                            <div class="col-sm-9">
                                                <input type="number" min="0" name="mno" class=" form-control"
                                                    value="<%= admin.mobilenumber %>" required>
                                            </div>
                                        </div>
                                        <hr>
                                        <div class="row">
                                            <div class="col-sm-3">
                                                <p class="mb-0">User Type</p>
                                            </div>
                                            <div class="col-sm-9 ">
                                                <label>User</label>
                                                <input type="radio" name="usertype" value="User" <%
                                                    if(admin.usertype=="User" ){ %> checked<% } %>>
                                                    <label>Approval</label>
                                                    <input type="radio" name="usertype" value="Approval" <%
                                                        if(admin.usertype=="Approval" ){ %> checked<% } %>>

                                                        <label>Admin</label>
                                                        <input type="radio" name="usertype" value="Admin" <%
                                                            if(admin.usertype=="Admin" ){ %> checked<% } %>>

                                            </div>
                                        </div>
                                        <hr>
                                        <div class="row">
                                            <div class="col-sm-3">
                                                <p class="mb-0">Department</p>
                                            </div>
                                            <div class="col-sm-9">
                                                <input class=" form-control" name="department"
                                                    value="<%= admin.department %>" required>
                                            </div>
                                        </div>

                                        <div class="modal-footer mt-2">
                                            <input type="submit" class="btn btn-info " style="color: white;"
                                                value="Save">
                                            <input type="hidden" name="id" value="<%= admin._id %>">

                                            <!-- <input type="button" class="btn btn-secondary m-2" data-dismiss="modal"
                                                value="Cancel"> -->

                                        </div>
                                    </div>
                                </form>

                            </div>

                        </div>
                    </div>
                </div>
            </section>

