    <div class="page-wrapper">

      <div class="content container-fluid">

        <div class="page-header">
          <div class="row align-items-center">
            <div class="col">
              <h3 class="page-title">Equipment Details</h3>
              <ul class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Equipment</a></li>
                <li class="breadcrumb-item active">Equipment Details</li>
              </ul>
            </div>
          </div>
        </div>






        <div class="card">
          <div class="row g-0">
            <div class="col-md-6 border-end">
              <div class="d-flex justify-content-center">
                <div class="main_image">
                  <div id="image-container">
                    <form action="/edit-item/<%=item._id %>" method="post" enctype="multipart/form-data">
                      <label for="image-upload" style="position: relative; display: inline-block;">
                        <i class="fas fa-camera"
                          style="position: absolute; bottom: 0; right: 0; font-size: 2rem; filter: brightness(120%);"></i>
                        <img src="<%=item.image%>" alt="Original Image" class="img-fluid mt-5" width="300px"
                          height="250px">
                      </label>
                      <input id="image-upload" value="<%= item.image %>" name="image" type="file"
                        style="display: none;">
                  </div>
                </div>
              </div>
            </div>
            <div class="col-md-6">


              <div class="p-3 right-side">
                <div class="col-sm-3">
                  <p class="mb-2">Name</p>
                </div>
                <div>

                  <input type="text" style="font-size: 1em ; color: gray;" class="form-control mb-2" name="name"
                    id="name" value="<%=item.name%>" required>

                </div>
                <div class="p3 right-side">
                  <div class="col-sm-3">
                    <p class="">Category</p>
                  </div>
                  <select class="form-control" id="category" style="font-size: 1em ; color: gray;" name="category">
                    <% categories.forEach(function(category) { %>
                      <option value="<%=category._id %>" <% if (item.category &&
                        category._id.toString()===item.category._id.toString()) { %>selected<% } %>>
                          <%= category.name %>
                      </option>
                      <% }); %>
                  </select>

                </div>
                <hr>
                <div class="mt-2 pr-3 content">
                  <div class="col-sm-3">
                    <p class="mb-2">Description</p>
                  </div>
                  <textarea style="font-size: 1em ; color: gray;" name="description" id="description" value=""
                    class="form-control" rows="3"><%=item.description%></textarea>
                </div>
                <hr>
                <div class="col-sm-3">
                  <p class="mb-2">Quantity</p>
                </div>
                <input type="number" style="font-size: 1em ; color: gray;" class="form-control" name="available_items"
                  id="available_items" min="1" value="<%=item.available_items%>">
                <!-- <hr> -->
                <!-- <input type="file" name="image" value="<%= item.image %>" class="form-control" id="fileInput" /> -->

              </div>
              <div class="buttons d-flex flex-row  gap-3 p-3">
                <button type="submit" class="btn btn-primary">Save</button>
              </div>
              </form>

            </div>

          </div>
        </div>

      </div>

    </div>
