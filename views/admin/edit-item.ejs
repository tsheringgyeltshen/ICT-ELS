  <script>
    // const imageUpload = document.getElementById("image-upload");

    // imageUpload.addEventListener("change", () => {
    //     const file = imageUpload.files[0];
    //     console.log("Selected file:", file);
    //     // You can now do something with the selected file, such as uploading it to a server or displaying it in the page
    // });
    const imageContainer = document.getElementById("image-container");
    const originalImage = imageContainer.querySelector("img");
    // const hoverImageSrc = "https://placehold.it/150x150/0000FF/FFFFFF";
    const imageUpload = imageContainer.querySelector("#image-upload");

    // imageContainer.addEventListener("mouseenter", () => {
    //     originalImage.src = hoverImageSrc;
    // });

    // imageContainer.addEventListener("mouseleave", () => {
    //     originalImage.src = originalImage.dataset.src;
    // });

    imageUpload.addEventListener("change", () => {
      const file = imageUpload.files[0];
      const reader = new FileReader();

      reader.addEventListener("load", () => {
        originalImage.src = reader.result;
        originalImage.dataset.src = reader.result;
      });

      reader.readAsDataURL(file);
    });




  </script>
