  <script>
    // Listen for form submission

    const forms = document.querySelectorAll('.collection-form');
    forms.forEach(form => {
      form.addEventListener('submit', async event => {
        event.preventDefault(); // Prevent default form submission behavior

        // Get loan ID and collection date from form data
        const loanId = form.getAttribute('action').split('/').pop();
        const collectionDateEl = form.elements.admin_collection_date;
        const collectionDate = collectionDateEl.value;

        // Send POST request to update loan with collection date
        const response = await fetch(form.getAttribute('action'), {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({ admin_collection_date: collectionDate })
        });

        if (response.ok) {
          // Remove the row from the table
          const row = document.getElementById(loanId);
          row.remove();
        } else {
          console.error('Error updating loan:', response.status);
        }
      });
    }); 
  </script>



