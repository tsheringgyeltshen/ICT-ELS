    <link rel="stylesheet" href="assets/plugins/fontawesome/css/all.min.css">


    <link rel="stylesheet" href="assets/css/style.css" type="text/css">
</head>

<body>

    <div class="main-wrapper">

        <div class="header">

            <div class="header-left">
                <a href="/adminhome" class="logo">

                    <img src="assets/img/logo.png" alt="Logo">
                </a>
                <a href="/adminhome" class="logo logo-small">
                    <img src="assets/img/logo-small.png" alt="Logo" width="30" height="30">
                </a>
            </div>
            <div class="menu-toggle">
                <a href="javascript:void(0);" id="toggle_btn">
                    <i class="fas fa-bars"></i>
                </a>
            </div>


            <a class="mobile_btn" id="mobile_btn">
                <i class="fas fa-bars"></i>
            </a>

            <ul class="nav user-menu">


                <li class="nav-item zoom-screen me-2">
                    <a href="#" class="nav-link header-nav-list win-maximize">
                        <img src="assets/img/icons/header-icon-04.svg" alt="">
                    </a>
                </li>

                <li class="nav-item dropdown has-arrow new-user-menus">
                    <a href="#" class="dropdown-toggle nav-link" data-bs-toggle="dropdown">
                        <span class="user-img">
                            <img class="rounded-circle" src="<%= admin.image%>" width="31" alt="adminprofile">
                            <div class="user-text">
                                <h6>
                                    <%=admin.name%>
                                </h6>
                                <p class="text-muted mb-0">Administrator</p>
                            </div>
                        </span>
                    </a>
                    <div class="dropdown-menu">
                        <div class="user-header">
                            <div class="avatar avatar-sm">
                                <img src="<%=admin.image%>" alt="User Image" class="avatar-img rounded-circle">
                            </div>
                            <div class="user-text">
                                <h6>
                                    <%=admin.name%>
                                </h6>
                                <p class="text-muted mb-0">Administrator</p>
                            </div>
                        </div>
                        <a class="dropdown-item" href="/adminprofile">My Profile</a>
                        <a class="dropdown-item" href="/logout">Logout</a>
                    </div>
                </li>

            </ul>

        </div>


        <div class="sidebar" id="sidebar">
            <div class="sidebar-inner slimscroll">
                <div id="sidebar-menu" class="sidebar-menu">
                    <ul>
                        <li class="menu-title">
                            <span>Main Menu</span>
                        </li>
                        <li>
                            <a href="/adminhome"><i class="feather-grid"></i> <span> Dashboard</span></a>

                        </li>
                        <li class="submenu">
                            <a href="#"><i class="fas fa-user"></i> <span> User</span> <span
                                    class="menu-arrow"></span></a>
                            <ul>
                                <li><a href="/new-user">Add User</a></li>
                                <li><a href="/viewstudent">All User</a></li>
                                <!-- <li><a href="/viewstaff">Staff View</a></li> -->


                            </ul>
                        </li>

                        <li class="submenu">
                            <a href="#"><i class="fas fa-laptop"></i> <span> Equipment</span> <span
                                    class="menu-arrow"></span></a>
                            <ul>
                                <li><a href="/all-item">All Equipment</a></li>
                                <li><a href="/add-item"> Add Equipment</a></li>
                                <li><a href="/categories">Category</a></li>

                            </ul>
                        </li>

                        <li class="submenu active">
                            <a href="#"><i class="fas fa-hand-holding"></i> <span>Loan</span><span
                                    class="menu-arrow"></span></a>

                            <ul>
                                <li><a href="/view-approved-loan">Approved Loan</a></li>
                                <li><a href="/ready-forcollect">Collect Loan</a></li>
                                <li><a href="/on_loanview">On Loan</a></li>
                                <li><a class="active" href="/returnedloan_view">Returned Loan</a></li>



                            </ul>

                        </li>

                    </ul>
                </div>
            </div>
        </div>


        <div class="page-wrapper">
            <div class="content container-fluid">

                <div class="page-header">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="page-sub-header">
                                <h3 class="page-title">Manage Loan</h3>
                                <ul class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="#">Loan</a></li>
                                    <li class="breadcrumb-item active">Returned Loan</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>


                <div class="row">
                    <div class="col-sm-12">
                        <div class="card card-table comman-shadow">
                            <div class="card-body">
                                <%- include('messages') %>

                                    <div class="page-header">
                                        <div class="row align-items-center">
                                            <div class="col">
                                                <h3 class="page-title">Returned Loan Details</h3>
                                            </div>
                                            <div class="col-lg-2">

                                                <div class="search-student-btn">
                                                </div>
                                            </div>
                                        </div>
                                    </div>




                                    <div class="table-responsive">
                                        <table id="datatablesSimple" class="table table-striped table-bordered" style="width: 100%;">
                                            <thead class="student-thread">
                                                <tr>
                                                    <th>User</th>
                                                    <th>User ID</th>
                                                    <th>Department</th>
                                                    <th>Collection Date</th>
                                                    <th>Return Date</th>
                                                    <th>Status</th>

                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% if (collectloan && collectloan.length) { %>
                                                    <% collectloan.filter(function(loan) { return loan.status === 'returned'; })
                                                      .sort(function(a, b) { return new Date(b.return_date) - new Date(a.return_date); })
                                                      .forEach(function(loan) { %>
                                                      <tr>
                                                        <td>
                                                            <h2 class="table-avatar">
                                                                <a href="/view-approvaluserdetail/<%= loan._id %>" class="avatar avatar-sm me-2">
                                                                    <img class="avatar-img rounded-circle" src="<%= loan.user_id.image %>" alt="User Image" />
                                                                </a>
                                                                <%= loan.user_id.name %>
                                                            </h2>
                                                        </td>
                                                        <td>
                                                            <%= loan.user_id.userid %>
                                                        </td>
                                                        <td>
                                                            <%= loan.user_id.department %>
                                                        </td>
                                                        
                                                        <td>
                                                            <% if (loan.admin_collection_date) { %>
                                                                <%= loan.admin_collection_date.toDateString() %>
                                                            <% } %>
                                                        </td>
                                                        <td>
                                                            <% if (loan.return_date) { %>
                                                                <%= loan.return_date.toDateString() %>
                                                            <% } %>
                                                        </td>
                                                        <td>
                                                            <% if (loan.status==='returned' ) { %>
                                                                <p class="badge bg-primary" >Returned</p>
                                                                <% } %>                                                        </td>
                                                      </tr>
                                                    <% }); %>
                                                  <% } else { %>
                                                    <p>No returned loans found.</p>
                                                  <% } %>
                                                                                
                                            </tbody>
                                        </table>
                                    </div>
                                    





                            </div>
                        </div>
                    </div>
                </div>
            </div>



        </div>

    </div>





    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>

    <script src="assets/js/jquery-3.6.0.min.js"></script>

    <script src="assets/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>

    <script src="assets/js/feather.min.js"></script>

    <script src="assets/plugins/slimscroll/jquery.slimscroll.min.js"></script>


    <!-- <script src="assets/plugins/datatables/datatables.min.js"></script> -->

    <script src="assets/js/datatables-simple-demo.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/umd/simple-datatables.min.js"
        crossorigin="anonymous"></script>
    <script src="assets/js/script.js"></script>
</body>

</html>