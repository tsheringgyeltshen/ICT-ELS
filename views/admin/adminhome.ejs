    <script>
        var xValues = ["On Loan Item", "Available Item"];
        var yValues = ['<%- itemonloancount %>', '<%- availableitem %>'];
        var barColors = ["#b91d47", "#00aba9"];

        new Chart("piechart", {
            type: "doughnut",
            data: {
                labels: xValues,
                datasets: [{
                    backgroundColor: barColors,
                    data: yValues
                }]
            },
            options: {
                title: {
                    display: true,
                    text: "Total number of items"
                },
                plugins: {
                    legend: {
                        display: true,
                        position: 'top'
                    }
                },
                responsive: true,
                maintainAspectRatio: false,
                height: 400 // Set the desired height here
            }
        });

        var topItems = JSON.parse('<%- JSON.stringify(topItems) %>');

        var xValues = topItems.map(item => item.name);
        var yValues = topItems.map(item => item.count);
        var barColors = generateRandomColors(topItems.length);

        new Chart("barchart", {
            type: "bar",
            data: {
                labels: xValues,
                datasets: [{
                    backgroundColor: barColors,
                    data: yValues
                }]
            },
            options: {
                legend: { display: false },
                title: {
                    display: true,
                    text: "Top 10 Item Count"
                },
                scales: {
                    y: {
                        ticks: {
                            precision: 0, // Display whole numbers
                            beginAtZero: true // Start the y-axis from 0
                        }
                    }
                },
                responsive: true,
                maintainAspectRatio: true,
                plugins: {
                    legend: {
                        display: false,
                        position: 'bottom'
                    }
                },
            }
        });



        var xValues = ["Overdue Loan", "Pending Loan"];
        var yValues = ['<%- overduecount %>', '<%- pendingcount %>'];
        var barColors = ["#b91d47", "#00aba9", "#2b5797"];

        new Chart("myChart", {
            type: "doughnut",
            data: {
                labels: xValues,
                datasets: [{
                    backgroundColor: barColors,
                    data: yValues
                }]
            },
            options: {
                title: {
                    display: true,
                    text: "Total Number of overdue and pending"
                },
                plugins: {
                    legend: {
                        display: true,
                        position: 'top'
                    }
                },
                responsive: true,
                maintainAspectRatio: false,
                height: 400 // Set the desired height here
            }
        });

        function generateRandomColors(count) {
            var colors = [];
            for (var i = 0; i < count; i++) {
                var color = '#' + Math.floor(Math.random() * 16777215).toString(16);
                colors.push(color);
            }
            return colors;
        }
    </script>

