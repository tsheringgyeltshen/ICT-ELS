                <a href="/adminhome" class="logo logo-small">
                    <img src="assets/img/logo-small.png" alt="Logo" width="30" height="30">
                </a>
            </div>
            <div class="menu-toggle">
                <a href="javascript:void(0);" id="toggle_btn">
                    <i class="fas fa-bars"></i>
                </a>
            </div>


            <a class="mobile_btn" id="mobile_btn">
                <i class="fas fa-bars"></i>
            </a>

            <ul class="nav user-menu">


                <li class="nav-item dropdown has-arrow new-user-menus">
                    <a href="#" class="dropdown-toggle nav-link" data-bs-toggle="dropdown">
                        <span class="user-img">
                            <img class="rounded-circle" src="<%=admin.image%>" width="31" alt="adminimage">
                            <div class="user-text">
                                <h6>
                                    <%=admin.name%>
                                </h6>
                                <p class="text-muted mb-0">Administrator</p>
                            </div>
                        </span>
                    </a>
                    <div class="dropdown-menu">
                        <div class="user-header">
                            <div class="avatar avatar-sm">
                                <img src="<%=admin.image%>" alt="User Image" class="avatar-img rounded-circle">
                            </div>
                            <div class="user-text">
                                <h6>
                                    <%=admin.name%>
                                </h6>
                                <p class="text-muted mb-0">Administrator</p>
                            </div>
                        </div>
                        <a class="dropdown-item" href="/adminprofile">My Profile</a>
                        <!-- <a class="dropdown-item" href="inbox.html">Inbox</a> -->
                        <a class="dropdown-item" href="/logout">Logout</a>
                    </div>
                </li>

            </ul>

        </div>


        <div class="sidebar" id="sidebar">
            <div class="sidebar-inner slimscroll">
                <div id="sidebar-menu" class="sidebar-menu">
                    <ul>
                        <li class="menu-title">
                            <span>Main Menu</span>
                        </li>
                        <li>
                            <a href="/adminhome"><i class="feather-grid"></i> <span> Dashboard</span></a>

                        </li>
                        <li class="submenu ">
                            <a href="#"><i class="fas fa-user"></i> <span> User</span> <span
                                    class="menu-arrow"></span></a>
                            <ul>
                                <!-- <li><a href="student-details.html">Student View</a></li> -->
                                <li><a href="/new-user">Add User</a></li>
                                <li><a href="/viewstudent">All User</a></li>
                                <!-- <li><a href="/viewstaff" class="active">Staff View</a></li> -->


                                <!-- <li><a href="edit-student.html">Student Edit</a></li> -->
                            </ul>
                        </li>

                        <li class="submenu">
                            <a href="#"><i class="fas fa-laptop"></i> <span> Equipment</span> <span
                                    class="menu-arrow"></span></a>
                            <ul>
                                <li><a href="/all-item">All Equipment</a></li>
                                <li><a href="/add-item"> Add Equipment</a></li>
                                <li><a href="/categories">Category</a></li>
                            </ul>
                        </li>

                        <li class="submenu active">
                            <a href="#"><i class="fas fa-hand-holding"></i> <span>Loan</span><span
                                    class="menu-arrow"></span></a>

                            <ul>
                                <li><a href="/view-approved-loan">Approved Loan</a></li>
                                <li><a href="/ready-forcollect">Collect Loan</a></li>
                                <li><a href="/on_loanview">On Loan</a></li>
                                <li><a href="/viewoverdue">Overdue Loan</a></li>
                                <li><a href="/returnedloan_view">Returned Loan</a></li>


                            </ul>

                        </li>

                    </ul>
                </div>
            </div>
        </div>


        <div class="page-wrapper">
            <div class="content container-fluid">

                <div class="page-header">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="page-sub-header">
                                <h3 class="page-title">Return Loan</h3>
                                <ul class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="#">Loan</a></li>
                                    <li class="breadcrumb-item active">Return Loan</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-12">
                        <div class="card card-table comman-shadow">
                            <div class="card-body">
                                <%- include('messages') %>

                                    <% if (typeof message !=='undefined' ) { %>
                                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                                            <%= message %>
                                                <button type="button" class="btn-close" data-bs-dismiss="alert"
                                                    aria-label="Close"></button>
                                        </div>
                                        <% } %>
                                            <div class="page-header">
                                                <div class="row align-items-center">
                                                    <div class="col">
                                                        <h3 class="page-title">Loan Details</h3>
                                                    </div>

                                                </div>
                                            </div>


                                            <div class="table-responsive">

                                                <table id="datatablesSimple" class="table table-striped table-bordered"
                                                    style="width: 100%;">
                                                    <thead class="student-thread">
                                                        <th>Item</th>
                                                        <th>Quantity</th>
                                                        <th>Username</th>
                                                        <th>Student or Staff</th>
                                                        <th>Year or Depatment</th>
                                                        <th>Request Date</th>
                                                        <th>Return Date</th>
                                                        <!-- <th>Return_date_status</th> -->
                                                        <!-- <th>Send Reminder</th> -->
                                                        <th>Action</th>
                                                    </thead>
                                                    <tbody>
                                                        <% loans.forEach(function(loan) { %>
                                                            <tr>
                                                                <td>
                                                                    <%= loan.item.name %>
                                                                </td>
                                                                <td>
                                                                    <%= loan.quantity %>
                                                                </td>
                                                                <td>
                                                                    <%= loan.user_id.name %>
                                                                        <%=loan.user_id.userid%>
                                                                </td>
                                                                <td>
                                                                    <%= loan.user_id.studentorstaff %>
                                                                </td>
                                                                <td>
                                                                    <% if (loan.user_id.studentorstaff==="student" ) {
                                                                        %>
                                                                        <%= loan.user_id.year %>
                                                                            <% } else { %>
                                                                                <%= loan.user_id.department %>
                                                                                    <% } %>
                                                                </td>
                                                                <td>
                                                                    <%= loan.request_date.toDateString() %>
                                                                </td>
                                                                <td>
                                                                    <%= loan.return_date.toDateString() %>
                                                                </td>
                                                                <!-- <td>
                                                        <%= loan.return_date_status %>
                                                    </td> -->

                                                                <td>
                                                                    <form method="POST" action="/loan-reminder">
                                                                        <input type="hidden" name="loanId"
                                                                            value="<%= loan._id %>">
                                                                        <button type="submit"
                                                                            class="btn btn-primary">Notify User
                                                                        </button>
                                                                    </form>


                                                                    <form action="/update_returndate/<%= loan.id %>"
                                                                        method="POST">
                                                                        <input type="hidden" name="loan_id"
                                                                            value="<%= loan.id %>">
                                                                        <button type="submit" class="mt-2 btn btn-outline-primary"
                                                                            name="return_date_status"
                                                                            value="returned">Return</button>
                                                                    </form>
                                                                </td>
                                                            </tr>
                                                            <% }); %>
                                                    </tbody>
                                                </table>

                                            </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>



        </div>

    </div>


    <script src="assets/js/jquery-3.6.0.min.js"></script>

    <script src="assets/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>

    <script src="assets/js/feather.min.js"></script>

    <script src="assets/plugins/slimscroll/jquery.slimscroll.min.js"></script>


    <!-- <script src="assets/plugins/datatables/datatables.min.js"></script> -->


    <script src="assets/js/script.js"></script>
    <script src="assets/js/datatables-simple-demo.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/umd/simple-datatables.min.js"
        crossorigin="anonymous"></script>



</body>

</html>