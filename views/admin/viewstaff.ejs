    <!-- <link rel="stylesheet" href="assets/plugins/datatables/datatables.min.css"> -->

    <link rel="stylesheet" href="assets/css/style.css" type="text/css">
</head>

<body>

    <div class="main-wrapper">

        <div class="header">

            <div class="header-left">
                <a href="/adminhome" class="logo">

                    <img src="assets/img/logo.png" alt="Logo">
                </a>
                <a href="/adminhome" class="logo logo-small">
                    <img src="assets/img/logo-small.png" alt="Logo" width="30" height="30">
                </a>
            </div>
            <div class="menu-toggle">
                <a href="javascript:void(0);" id="toggle_btn">
                    <i class="fas fa-bars"></i>
                </a>
            </div>


            <a class="mobile_btn" id="mobile_btn">
                <i class="fas fa-bars"></i>
            </a>

            <ul class="nav user-menu">


                <li class="nav-item dropdown has-arrow new-user-menus">
                    <a href="#" class="dropdown-toggle nav-link" data-bs-toggle="dropdown">
                        <span class="user-img">
                            <img class="rounded-circle" src="<%=admin.image%>" width="31" alt="adminimage">
                            <div class="user-text">
                                <h6>
                                    <%=admin.name%>
                                </h6>
                                <p class="text-muted mb-0">Administrator</p>
                            </div>
                        </span>
                    </a>
                    <div class="dropdown-menu">
                        <div class="user-header">
                            <div class="avatar avatar-sm">
                                <img src="<%=admin.image%>" alt="User Image" class="avatar-img rounded-circle">
                            </div>
                            <div class="user-text">
                                <h6>
                                    <%=admin.name%>
                                </h6>
                                <p class="text-muted mb-0">Administrator</p>
                            </div>
                        </div>
                        <a class="dropdown-item" href="/adminprofile">My Profile</a>
                        <!-- <a class="dropdown-item" href="inbox.html">Inbox</a> -->
                        <a class="dropdown-item" href="/logout">Logout</a>
                    </div>
                </li>

            </ul>

        </div>


        <div class="sidebar" id="sidebar">
            <div class="sidebar-inner slimscroll">
                <div id="sidebar-menu" class="sidebar-menu">
                    <ul>
                        <li class="menu-title">
                            <span>Main Menu</span>
                        </li>
                        <li>
                            <a href="/adminhome"><i class="feather-grid"></i> <span> Dashboard</span></a>

                        </li>
                        <li class="submenu active">
                            <a href="#"><i class="fas fa-user"></i> <span> User</span> <span
                                    class="menu-arrow"></span></a>
                            <ul>
                                <!-- <li><a href="student-details.html">Student View</a></li> -->
                                <li><a href="/new-user">Add User</a></li>
                                <li><a href="/viewstudent">All User</a></li>
                                <!-- <li><a href="/viewstaff" class="active">Staff View</a></li> -->


                                <!-- <li><a href="edit-student.html">Student Edit</a></li> -->
                            </ul>
                        </li>

                        <li class="submenu">
                            <a href="#"><i class="fas fa-laptop"></i> <span> Equipment</span> <span
                                    class="menu-arrow"></span></a>
                            <ul>
                                <li><a href="/all-item">All Equipment</a></li>
                                <li><a href="/add-item"> Add Equipment</a></li>
                                <li><a href="/categories">Category</a></li>
                            </ul>
                        </li>
                        
                        <li>
                            <a href="/view-approved-loan"><i class="fas fa-hand-holding"></i> <span> Loan</span> </a>

                        </li>

                    </ul>
                </div>
            </div>
        </div>


        <div class="page-wrapper">
            <div class="content container-fluid">

                <div class="page-header">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="page-sub-header">
                                <h3 class="page-title">Manage Staff</h3>
                                <ul class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="#">Staff</a></li>
                                    <li class="breadcrumb-item active">All Staff</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-12">
                        <div class="card card-table comman-shadow">
                            <div class="card-body">

                                <div class="page-header">
                                    <div class="row align-items-center">
                                        <div class="col">
                                            <h3 class="page-title">Staff Details</h3>
                                        </div>
                                        <div class="col-lg-2">

                                            <div class="search-student-btn">
                                              <!-- <a href="#" class="btn btn-outline-primary me-2"><i class="fas fa-download"></i> Download</a> -->
                                              <a href="/new-user" type="button" class="btn btn-primary"><i class="fas fa-plus m-1"></i>Staff</a>
                                            </div>
                                          </div>
                                    </div>
                                </div>

                                <div class="student-group-form">
                                    <form method="get" action="/viewstaff">
                                        <div class="row">
                                            <div class="col-lg-3 col-md-6">
                                                <div class="form-group">
                                                    <input type="text" class="form-control" name="search" id="search"
                                                        placeholder="Enter ID" value="<%= search || '' %>">

                                                </div>
                                            </div>
                                            <div class="col-lg-3 col-md-6">
                                                <div class="form-group">
                                                    <select name="usertype" class="form-control">
                                                        <option value="">Select a role</option>
                                                        <option value="User" <% if (usertype==="User" ) { %>selected<% }
                                                                %>>user
                                                        </option>
                                                        <option value="Admin" <% if (usertype==="Admin" ) { %>selected<%
                                                                } %>
                                                                >admin
                                                        </option>
                                                        <option value="Approval" <% if (usertype==="Approval" ) { %>
                                                            selected<% }%>
                                                                >approval</option>

                                                    </select>
                                                </div>
                                            </div>
                                            <div class="col-lg-4 col-md-6">
                                                <div class="form-group">
                                                    <select name="department" class="form-control">
                                                        <option value="">Select a department</option>
                                                        <option value="BScIT" <% if (department==="BScIT" ) { %>selected
                                                            <% } %>>BScIT
                                                        </option>
                                                        <option value="SIDD" <% if (department==="SIDD" ) { %>selected<%
                                                                } %>>SIDD
                                                        </option>
                                                        <option value="Blockchain" <% if (department==="Blockchain" ) {
                                                            %>selected<% }%>
                                                                >Blockchain</option>
                                                        <option value="Fullstack" <% if (department==="Fullstack" ) { %>
                                                            selected<% } %>
                                                                >Fullstack</option>
                                                        <option value="SOC" <% if (department==="SOC" ) { %>selected<% }
                                                                %>>SOC</option>
                                                        <option value="BScCS" <% if (department==="BScCS" ) { %>selected
                                                            <% } %>>BScCS
                                                        </option>
                                                        <option value="AI&DS" <% if (department==="AI&DS" ) { %>selected
                                                            <% } %>>AI&DS
                                                        </option>
                                                        <option value="ICT" <% if (department==="ICT" ) { %>selected<% }
                                                                %>>ICT</option>
                                                        <option value="cyberelective" <% if
                                                            (department==="cyberelective" ) { %>selected
                                                            <% } %>>Cyber Elective
                                                        </option>

                                                    </select>
                                                </div>
                                            </div>
                                            <div class="col-lg-2">
                                                <div class="search-student-btn">
                                                    <button type="submit" class="btn btn-primary">Staff</button>
                                                </div>
                                            </div>

                                        </div>
                                    </form>

                                </div>

                                <div class="table-responsive">
                                    <% if (users.length> 0) { %>
                                        <table id="datatablesSimple" class="table table-striped table-bordered"
                                            style="width: 100%;">
                                            <thead class="student-thread">
                                                <tr>

                                                    <th>Name</th>
                                                    <th>ID</th>
                                                    <th>Deparment</th>
                                                    <th>Email</th>
                                                    <th>Role</th>
                                                    <th>Mobile Number</th>

                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% if(users.length> 0){
                                                    for(let i=0; i<users.length; i++){ %>

                                                        <tr>
                                                            <td>
                                                                <h2 class="table-avatar">
                                                                    <a href="/view-onestaff?id=<%= users[i]._id %>"
                                                                        class="avatar avatar-sm me-2"><img
                                                                            class="avatar-img rounded-circle"
                                                                            src="<%= users[i].image %>"
                                                                            alt="User Image"></a>
                                                                    <a href="/view-onestaff?id=<%= users[i]._id %>">
                                                                        <%= users[i].name %>
                                                                    </a>
                                                                </h2>
                                                            </td>

                                                            <td>
                                                                <%= users[i].userid %>
                                                            </td>

                                                            <td>
                                                                <%= users[i].department %>
                                                            </td>
                                                            <td>
                                                                <%= users[i].email %>
                                                            </td>
                                                            <td>
                                                                <%= users[i].usertype%>
                                                            </td>
                                                            <td>
                                                                <%= users[i].mobilenumber %>
                                                            </td>
                                                            <% } } else{ %>
                                                        <tr>
                                                            <td colspan="5">Users Not Found</td>
                                                        </tr>
                                                        <% } %>
                                                            </tr>

                                            </tbody>
                                        </table>
                                        <% } else { %>
                                            <p>No users found.</p>
                                            <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>



        </div>

    </div>


    <script src="assets/js/jquery-3.6.0.min.js"></script>

    <script src="assets/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>

    <script src="assets/js/feather.min.js"></script>

    <script src="assets/plugins/slimscroll/jquery.slimscroll.min.js"></script>


    <!-- <script src="assets/plugins/datatables/datatables.min.js"></script> -->


    <script src="assets/js/script.js"></script>
    <script src="assets/js/datatables-simple-demo.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/umd/simple-datatables.min.js"
        crossorigin="anonymous"></script>
        
        
        
</body>

</html>


