                <div class="row">
                    <div class="col-sm-12">
                        <div class="card card-table comman-shadow">
                            <div class="card-body">
                                <%- include('messages') %>

                                    <div class="page-header">
                                        <div class="row align-items-center">
                                            <div class="col">
                                                <h3 class="page-title">On Loan Details</h3>
                                            </div>
                                            <div class="col-lg-2">

                                                <div class="search-student-btn">
                                                </div>
                                            </div>
                                        </div>
                                    </div>




                                    <div class="table-responsive">
                                        <% if (collectloan.length > 0) {
                                            // Sort the loans by return date
                                            collectloan.sort(function(a, b) {
                                                // Convert return dates to timestamps for comparison
                                                returnDateA = new Date(a.return_date).getTime() || Infinity;
                                                returnDateB = new Date(b.return_date).getTime() || Infinity;
                                                today = new Date().toLocaleString("en-US", { timeZone: "Asia/Thimphu" });
                                                today = new Date(today).getTime();
                                    
                                                // Compare return dates
                                                if (returnDateA === returnDateB) {
                                                    // If return dates are the same, compare days left
                                                    daysLeftA = Math.floor((returnDateA - today) / (1000 * 60 * 60 * 24));
                                                    daysLeftB = Math.floor((returnDateB - today) / (1000 * 60 * 60 * 24));
                                                    return daysLeftA - daysLeftB;
                                                } else {
                                                    return returnDateA - returnDateB;
                                                }
                                            });
                                        %>
                                        <table id="datatablesSimple" class="table table-striped table-bordered" style="width: 100%;">
                                            <thead class="student-thread">
                                                <tr>
                                                    <th>User</th>
                                                    <th>User ID</th>
                                                    <th>Department</th>
                                                    <th>Collection Date</th>
                                                    <th>Return Date</th>
                                                    <th>Return</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% collectloan.forEach(function(loan) { %>
                                                <% if (loan.status === 'onloan' && loan.return_date !== null) { %>
                                                <% const today = new Date().toLocaleString("en-US", { timeZone: "Asia/Thimphu" });
                                                    const todayTimestamp = new Date(today).getTime(); 
                                                    const returnDate = new Date(loan.return_date).toLocaleString("en-US", { timeZone: "Asia/Thimphu" });
                                                    const returnDateTimestamp = new Date(returnDate).getTime(); 
                                                    const timeDiff = returnDateTimestamp - todayTimestamp; 
                                                    const diffDays = Math.ceil(timeDiff / (1000 * 60 * 60 * 24));
                                                    const overdueDays = Math.max(0, diffDays); %>
                                                <tr>
                                                    <td>
                                                        <h2 class="table-avatar">
                                                            <a href="/onloandetailforreturn/<%= loan._id %>" class="avatar avatar-sm me-2">
                                                                <img class="avatar-img rounded-circle" src="<%= loan.user_id.image %>" alt="User Image">
                                                            </a>
                                                            <%= loan.user_id.name %>
                                                        </h2>
                                                    </td>
                                                    <td>
                                                        <%= loan.user_id.userid %>
                                                    </td>
                                                    <td>
                                                        <%= loan.user_id.department %>
                                                    </td>
                                                    <td>
                                                        <% if (loan.admin_collection_date) { %>
                                                        <%= loan.admin_collection_date.toLocaleDateString("en-US", { timeZone: "Asia/Thimphu" }) %>
                                                        <% } %>
                                                    </td>
                                                    <td>
                                                        <% if (loan.return_date) { %>
                                                        <%= loan.return_date.toLocaleDateString("en-US", { timeZone: "Asia/Thimphu" }) %>
                                                        <% } %>
                                                    </td>
                                                    <td>
                                                        <% if (diffDays === 0) { %>
                                                        <span style="color: red;">Today</span>
                                                        <% } else if (diffDays === 1) { %>
                                                        <span style="color: red;">1 day left</span>
                                                        <form method="post" action="/notifyuser/<%= loan.id %>">
                                                            <button type="submit" class="btn btn-outline-primary mt-1">Notify User</button>
                                                        </form>
                                                        <% } else if (diffDays > 1) { %>
                                                        <span style="color: red;"><%= diffDays %> days left</span>
                                                        <% } else { %>
                                                        <span style="color: red;">Overdue by <%= -diffDays %> day(s)</span>
                                                        <% } %>
                                                    </td>
                                                </tr>
                                                <% } %>
                                                <% }); %>
                                            </tbody>
                                        </table>
                                        <% } else { %>
                                        <p>No on loan found.</p>
                                        <% } %>
                                    </div>
                                    






                            </div>
                        </div>
                    </div>
                </div>
