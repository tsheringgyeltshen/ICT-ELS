                    </div>
                </div>


                <div class="row">
                    <div class="col-sm-12">
                        <div class="card card-table comman-shadow">
                            <div class="card-body">
                                <%- include('messages') %>

                                    <div class="page-header">
                                        <div class="row align-items-center">
                                            <div class="col">
                                                <h3 class="page-title">On Loan Details</h3>
                                            </div>
                                            <div class="col-lg-2">

                                                <div class="search-student-btn">
                                                </div>
                                            </div>
                                        </div>
                                    </div>




                                    <div class="table-responsive">
                                        <% if (collectloan.length> 0) {
                                            // sort the loans by return date
                                            collectloan.sort(function(a, b) {
                                            // convert return dates to timestamps for comparison
                                            returnDateA = new Date(a.return_date).getTime() || Infinity;
                                            returnDateB = new Date(b.return_date).getTime() || Infinity;
                                            today = new Date().getTime();
                                            // compare return dates
                                            if (returnDateA === returnDateB) {
                                            // if return dates are the same, compare days left
                                            daysLeftA = Math.ceil((returnDateA - today) / (1000 * 60 * 60 * 24));
                                            daysLeftB = Math.ceil((returnDateB - today) / (1000 * 60 * 60 * 24));
                                            return daysLeftA - daysLeftB;
                                            } else {
                                            return returnDateA - returnDateB;
                                            }
                                            });
                                            %>
                                            <table id="datatablesSimple" class="table table-striped table-bordered"
                                                style="width: 100%;">
                                                <thead class="student-thread">
                                                    <tr>
                                                        <th>User</th>
                                                        <th>User ID</th>
                                                        <th>Department</th>
                                                        <!-- <th>Status</th> -->
                                                        <th>Collection Date</th>
                                                        <th>Return Date</th>
                                                        <th>Return</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% collectloan.forEach(function(loan) { %>
                                                        <% if (loan.status === 'onloan' && loan.return_date !== null) { %>
                                                            <% const today = new Date().getTime();
                                                            const returnDate = new Date(loan.return_date).getTime();
                                                            const timeDiff = returnDate - today;
                                                            const diffDays = Math.ceil(timeDiff / (1000 * 60 * 60 * 24));
                                                            if (diffDays < 0) {
                                                                const overdueDays = Math.abs(diffDays);
                                                            %>
                                                                <tr>
                                                                    <td>
                                                                        <h2 class="table-avatar">
                                                                            <a href="/onloandetailforreturn/<%= loan._id %>" class="avatar avatar-sm me-2">
                                                                                <img class="avatar-img rounded-circle" src="<%= loan.user_id.image %>"
                                                                                    alt="User Image">
                                                                            </a>
                                                                            <%= loan.user_id.name %>
                                                                        </h2>
                                                                    </td>
                                                                    <td>
                                                                        <%= loan.user_id.userid %>
                                                                    </td>
                                                                    <td>
                                                                        <%= loan.user_id.department %>
                                                                    </td>
                                                                    <td>
                                                                        <% if (loan.admin_collection_date) { %>
                                                                            <%= loan.admin_collection_date.toDateString() %>
                                                                        <% } %>
                                                                    </td>
                                                                    <td>
                                                                        <% if (loan.return_date) { %>
                                                                            <%= loan.return_date.toDateString() %>
                                                                        <% } %>
                                                                    </td>
                                                                    <td>
                                                                        <span style="color:red">Overdue by <%= overdueDays %> day(s)</span>
                                                                    </td>
                                                                </tr>
                                                            <% } else { %>
                                                                <tr>
                                                                    <td>
                                                                        <h2 class="table-avatar">
                                                                            <a href="/onloandetailforreturn/<%= loan._id %>" class="avatar avatar-sm me-2">
                                                                                <img class="avatar-img rounded-circle" src="<%= loan.user_id.image %>"
                                                                                    alt="User Image">
                                                                            </a>
                                                                            <%= loan.user_id.name %>
                                                                        </h2>
                                                                    </td>
                                                                    <td>
                                                                        <%= loan.user_id.userid %>
                                                                    </td>
                                                                    <td>
                                                                        <%= loan.user_id.department %>
                                                                    </td>
                                                                    <td>
                                                                        <% if (loan.admin_collection_date) { %>
                                                                            <%= loan.admin_collection_date.toDateString() %>
                                                                        <% } %>
                                                                    </td>
                                                                    <td>
                                                                        <% if (loan.return_date) { %>
                                                                            <%= loan.return_date.toDateString() %>
                                                                        <% } %>
                                                                    </td>
                                                                    <td>
                                                                        <% if (diffDays === 0) { %>
                                                                            <span style="color:red">Today</span>
                                                                        <% } else { %>
                                                                            <% if (diffDays === 1) { %>
                                                                                <span style="color: red;">Overdue by 1 day</span>
                                                                                <form method="post" action="/notifyuser/<%= loan.id %>">
                                                                                    <button type="submit" class="btn btn-outline-primary mt-1">Notify User</button>
                                                                                </form>
                                                                            <% } else { %>
                                                                                <span style="color: rgb(255, 149, 0);"><%= diffDays %> days left</span>
                                                                            <% } %>
                                                                        <% } %>
                                                                    </td>
                                                                </tr>
                                                            <% } %>
                                                        <% } %>
                                                    <% }); %>
                                                </tbody>
                                                
                                            </table>
                                            <% } else { %>
                                                <p>No on loan found.</p>
                                                <% } %>
                                    </div>




                            </div>
                        </div>
                    </div>
                </div>
